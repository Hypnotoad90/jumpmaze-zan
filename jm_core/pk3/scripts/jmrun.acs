function int JMRGetPosition( int player ) {
   for ( int pos = 0; pos < _jmr_table_size; pos += 1 ) {
      if ( _jmr_table[ pos ][ JMR_IDX_NUM ] == player ) {
         return pos;
      }
   }

   return VALUE_NONE;
}

