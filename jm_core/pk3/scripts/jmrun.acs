function int to_mins(int tics) {
    int mins = tics / (TICRATE * 60);
    return mins;
}

function int to_secs(int tics) {
    int secs = (tics / TICRATE) % 60;
    return secs;
}

function int to_mils(int tics) {
    int mils = tics % TICRATE;
    mils = ((mils * 1000) / TICRATE);
    return mils;
}

